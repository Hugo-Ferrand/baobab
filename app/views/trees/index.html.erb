<div class="list_baobab">
  <div class="title">
    <h1><strong>Baobarium </strong><span>ðŸŒ´<%= @trees.length%> fancy baobabs ðŸŒ´</span></h1>
    <%# <%= render "trees/search"%> 
  </div>

  <div class="page_baobab">
    <div class="cards">
      <% @trees.each do |tree| %>
        <%= link_to tree_path(tree), :class => 'link-decoration' do %>
          <div class="card card_index d-inline-block mt-2" >
            <%= cl_image_tag(tree.photo.key, width: 280, height: 200, crop: :fill) %>
            <div class="card-body">
              <p class="card-title"><strong><%= tree.species.capitalize[0..28] %></strong></p>
              <p class="card-text"><%= tree.description.capitalize[0..28] %></p>
              <div class="price">
                <p>â‚¬<%= tree.price %></p>
              </div>
            </div>
          </div>
        <% end %>

      <% end %>
    </div>
    <div class="map" style="width: 100%;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
